<?xml version="1.0"?>
<dynamic_object>
	<diesel materials="units/world/props/security_camera/security_camera" orientation_object="rp_security_camera_hospital" />
	<sequence_manager file="units/world/props/security_camera/security_camera_hospital" />
	<animations>
		<animation_group name="loop" enabled="true">
			<object name="g_security_camera" />
		</animation_group>
		<animation_group name="dead">
			<object name="g_security_camera_break" />
		</animation_group>
	</animations>
	<bodies>
		<body remove_ray_type="walk vis_graph" name="c_security_camera_stand" enabled="true" template="raycoll_static">
			<object name="g_security_camera" />
			<object name="c_security_camera_stand" collision_type="mesh_mopp" />
		</body>
		<body remove_ray_type="walk vis_graph" name="c_security_camera" enabled="true" template="animated">
			<object name="c_security_camera" collision_type="convex" padding="-2"/>
		</body>
		<body remove_ray_type="walk vis_graph" name="c_security_camera_break" enabled="false" template="animated">
			<object name="c_security_camera_break" collision_type="convex" padding="-2"/>
		</body>
	</bodies>
	<decal_surfaces default_material="metal">
		<decal_mesh material="metal" name="dm_security_camera_stand" enabled="true" />
		<decal_mesh material="metal" name="dm_security_camera_break" enabled="false" />
		<decal_mesh material="metal" name="dm_security_camera" enabled="true" />
	</decal_surfaces>
	<graphics>
		<object name="g_lamp" enabled="true" shadow_caster="false" instance_struct="world_tm" />
		<object name="g_security_camera_stand" enabled="true" shadow_caster="false" instance_struct="world_tm" />
		<object name="g_security_camera" enabled="true" shadow_caster="false" instance_struct="world_tm" />
		<object name="g_security_camera_break" shadow_caster="false" instance_struct="world_tm" />

	</graphics>
</dynamic_object>